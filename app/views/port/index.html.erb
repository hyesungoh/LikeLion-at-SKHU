
<% @ports.each do |port| %>
<br/>
<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
        <div class="card mb-3">
            
            <img class="card-img-top" src="/assets/port_sample.svg" alt="Card image cap">
    
            <div class="card-body">
                <h5 class="card-title"><%= port.title %></h5>
                <p class="card-text"><%= port.content %></p>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
            
            <div class="card-footer text-muted align-middle">
                <% port.members.each do |member| %>
                <span class="align-middle"
                data-toggle="modal" data-target="#Modal<%=member.id%>">
                <%= member.name %></span>
                <% end %>
            </div>
        </div>
    </div>
    <div class="col-sm-2"></div>
</div>
<% end %>

<% @members.each do |member| %>
<!-- modal -->
<div class="modal fade" id="Modal<%= member.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New message</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p> <%= member.name %> </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<!-- modal end -->

<% end %>